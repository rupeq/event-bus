{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["ES2015"],
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./package/eventBus/*"]
    }
  },
  "include": ["package/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
